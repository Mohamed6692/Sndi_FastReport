@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

@{
    Layout = null; // Disable the layout for this specific page
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/icheck-bootstrap/3.0.1/icheck-bootstrap.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css">

    <style>
        .login-box {
            margin-left: 240px; /* Appliquer une marge gauche de 17 pixels */
        }

        .bg-fill {
            min-height: 100%; /* Remplir toute la hauteur de la colonne */
        }

        .custom-column {
            height: 400px; /* Hauteur personnalisée */
            width: 300px; /* Largeur personnalisée */
        }

        .custom-login-box {
            width: 50%; /* Largeur personnalisée pour le formulaire */
            height: auto;
        }

        .img img {
            max-width: 50%; /* Largeur maximale pour l'image */
            height: auto;
            margin-top:170px ;/* Hauteur automatique pour maintenir le ratio */
            margin-right:170px;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="container-fluid">
        <div class="row">
            <!-- Colonne de gauche avec un arrière-plan vert -->
            <div class="col-md-6  bg-white">
                <!-- Contenu pour la colonne de gauche -->
                <div class="img" style="margin-top: 9rem;">
                    <img src="~/img/LoginLogo.jpg" class="float-right">
                </div>
                <!-- Ajoutez tout contenu supplémentaire ici -->
            </div>

            <!-- Colonne de droite avec le formulaire de connexion -->
            <div class="col-md-6 bg-warning align-items-center " style=" height: 1000px;">
                <div class="login-box custom-login-box" style=" margin-top: 190px;">
                    <div class="card card-outline card-primary">
                        <div class="card-header text-center">
                            <a href="#" class="h1"><b>SNDI</b>_SIGP</a>
                        </div>
                        <div class="card-body">
                            <h1 class="login-box-msg">Bienvenue!!</h1>

                            <form asp-page="./Login" method="post" id="account">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="input-group mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-envelope"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password">
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-8">
                                        <div class="icheck-primary">
                                            <input asp-for="Input.RememberMe" class="form-check-input" />
                                            <label asp-for="Input.RememberMe" class="form-label">
                                                Remember Me
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <button id="login-submit" type="submit" class="btn btn-primary btn-block">Sign In</button>
                                    </div>
                                </div>
                            </form>

                            <div class="social-auth-links text-center mt-2 mb-3">
                                <a href="#" class="btn btn-block btn-primary">
                                    <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                                </a>
                                <a href="#" class="btn btn-block btn-danger">
                                    <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                                </a>
                            </div>

                            <p class="mb-1">
                                <a href="forgot-password.html">I forgot my password</a>
                            </p>
                            <p class="mb-0">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register a new membership</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.5.2/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/js/adminlte.min.js"></script>
</body>
</html>

