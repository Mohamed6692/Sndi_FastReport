@model ActeAdministratif.Models.Filiation

@{
    ViewData["Title"] = "Détails";
}
@{
    Layout = "_Layout"; // Disable the layout for this specific page
}



<head>
    <title>@ViewData["Title"]</title>
    <!-- Ajoutez ici les liens vers les fichiers CSS de Bootstrap -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Votre style CSS ici */

        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin-left: 50px;
        }

        .yellow-background {
            background-color: #f4e9c8;
        }
    </style>
</head>


    <div class="container mt-5 mb-5">
        <h3 class="mb-4">Détails de la Filiation etape 2/2</h3>
        <div class="row">
            
            <div class="col-md-6">
                <div class="card-body">
                    <div class="alert alert-warning alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
                        Attention verifier le recap avant la prochaine etape .
                    </div>
                </div>
                <div class="card center-container yellow-background">
                    <div class="card-header font-weight-bold">
                        Résumé de saisie
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-5">Nom du Père</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.NomPere)</dd>

                            <dt class="col-sm-5">Prénom du Père</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.PrenomPere)</dd>

                            <dt class="col-sm-5">Date de Naissance du Père</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.DateDenaissancePere)</dd>

                            <dt class="col-sm-5">Lieu de Naissance du Père</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.LieuxNaissancePere)</dd>

                            <dt class="col-sm-5">Nom de la Mère</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.NomMere)</dd>

                            <dt class="col-sm-5">Prénom de la Mère</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.PrenomMere)</dd>

                            <dt class="col-sm-5">Date de Naissance de la Mère</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.DateDenaissanceMere)</dd>

                            <dt class="col-sm-5">Lieu de Naissance de la Mère</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.LieuxNaissanceMere)</dd>

                            <!-- Ajoutez ici les autres champs que vous souhaitez afficher -->

                        </dl>
                    </div>
                    <div class="mt-3 ">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.id">Modifier</a>
                        <a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
                        <a class="btn btn-success" asp-action="Regroupe" asp-route-id="@Model?.id">Recap</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="img" style="margin-top: 9rem;">
                    <img src="~/img/logociv.png" class="float-right">
                </div>
            </div>
        </div>
    </div>

  
    