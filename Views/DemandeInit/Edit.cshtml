@model ActeAdministratif.Models.DemandeInit

@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = "_Layout"; // Disable the layout for this specific page
}

<head>
    <style>
        .center-text {
            text-align: center;
            color: orange;
        }

        .uniform-border {
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
        }
    </style>


</head>



        <!-- Content Wrapper. Contains page content -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Modification d'un élement de la liste</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                           
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="center-text">
                        <h4>Informations générales</h4>
                    </div>
                    <hr />
                    <form asp-action="Create" class="row g-3 needs-validation uniform-border" novalidate enctype="multipart/form-data">
                        <div class="col-md-9">
                            <div class="row g-3 needs-validation">
                                <div class="row">
                                    <div class="form-group col-md-8">
                                        <label for="TypeActAdmin">Type d'acte administratif</label>
                                        <select class="form-control select2bs4" id="TypeActAdmin" name="TypeActAdmin" style="width: 100%;" required asp-for="TypeActAdmin">
                                            <option selected disabled value="">choix...</option>
                                            <option value="1">CERTIFICAT DE NATIONNALITE</option>
                                            <option value="2">CASIER JURDICIAIRE</option>
                                        </select>
                                        <div class="invalid-tooltip">
                                            Veuillez sélectionner un genre valide.
                                        </div>
                                    </div>
                                    <input type="hidden" asp-for="EnregistrerId" />
                                    <div class="form-group col-md-4">
                                        <label for="validationTooltip02" class="form-label">Montant (XOF)</label>
                                        <input type="number" step="0.01" class="form-control" id="validationTooltip02" asp-for="Montant" required readonly value="2500 CFA">
                                        <div class="valid-tooltip">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="validationTooltipUsername3" class="form-label">Numero du recu de paiement</label>
                                    <input type="text" class="form-control" id="validationTooltipUsername3" asp-for="NumeroRecuPaiem" required>
                                    <div class="invalid-tooltip">
                                        Please choose a unique and valid Numero.
                                    </div>
                                </div>

                                <div class="form-group col-md-3">
                                    <label for="validationTooltip08" class="form-label">Nombre de copie</label>
                                    <input type="text" class="form-control" id="validationTooltip08" asp-for="NombreCopie" required>
                                    <div class="invalid-tooltip">
                                        Please provide a valid pseudo.
                                    </div>
                                </div>

                                <div class="form-group col-md-3">
                                    <label for="validationTooltip08" class="form-label">Date de Requete</label>
                                    <input type="date" class="form-control" id="validationTooltip08" asp-for="DataRequet" required>
                                    <div class="invalid-tooltip">
                                        Please provide a valid data.
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-12">
                            <div class="text-end">
                                <button class="btn btn-success" type="submit">Suivant</button>
                            </div>
                        </div>
                    </form>

                </div>
                <!-- /.container-fluid -->
            </section>


        </div>


