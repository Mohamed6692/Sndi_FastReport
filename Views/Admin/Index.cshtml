@model IEnumerable<ActeAdministratif.Areas.Identity.Data.SNDIUser>
@{
    ViewData["Title"] = "READ USER";
}

@{
    Layout = "_Layout"; // Disable the layout for this specific page
}


<h4 class="bg-info text-white">All Users</h4>



        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                   
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                
               <div>
                <a asp-action="Create" class="btn btn-secondary">Create a User</a>

                <table class="table table-sm table-bordered">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Update</th>
                        <th>Delete</th>
                        <th>PassWord First login</th>
                    </tr>
                        @foreach (ActeAdministratif.Areas.Identity.Data.SNDIUser user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                 
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">
                                    Update
                                </a>
                            </td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Delete
                                    </button>

                                </form>
                            </td>
                                <td>@user.PassGenerate</td>
                        </tr>
                    }
                </table>

                    <!-- /.content -->
               </div>
            </section>

            


            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Content Wrapper. Contains page content -->
