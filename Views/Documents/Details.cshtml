@model ActeAdministratif.Models.Document

@{
    ViewData["Title"] = "Détails";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Ajoutez ici les liens vers les fichiers CSS de Bootstrap -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>

        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin-left: 50px;
        }

        .yellow-background {
            background-color: #f4e9c8;
        }
    </style>

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">


        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/img/Sndi.jpg" alt="" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
            </ul>

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/img/ActeAdministratif.jpg" alt="Sndi Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">SNDI</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">ID User:</a>
                    </div>
                </div>

                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item menu-open">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Admin"
                                       asp-action="Create">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Gestion des operateurs de saisie</p>
                                        Register
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="DemandeInit"
                                       asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Demande initier</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Documents"
                                       asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Enregister demandeur</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller=""
                                       asp-action="">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Gerer mon compte</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="pages/widgets.html" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Widgets
                                    <span class="right badge badge-danger">New</span>
                                </p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>


    <div class="container mt-5 mb-5">
        <h3 class="mb-4">Détails du Document etape 1/2</h3>
        <div class="row">
            
            <div class="col-md-6">
                 <div class="card-body">
                        <div class="alert alert-warning alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
                            Attention verifier le recap avant la prochaine etape .
                        </div>
                    </div>
                <div class="card center-container yellow-background">
                    <div class="card-header font-weight-bold">
                        Resume de saisie
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-5">Numéro de Document</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.Numero)</dd>

                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
                            <dd class="col-sm-10"> @Html.DisplayFor(model => model.Date)</dd>

                            <dt class="col-sm-5">
                                Circonscription
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Circonscription)
                            </dd>

                            <dt class="col-sm-5">
                                Lieux de l'etablissement
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.LieuxEtablissement)
                            </dd>

                            <dt class="col-sm-5">
                                Nom de famille
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.NomDeFamille)
                            </dd>

                            <dt class="col-sm-5">
                                Nom de jeune Fille
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.NomDeJeuneFille)
                            </dd>

                            <dt class="col-sm-5">
                                Prenom
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Prenom)
                            </dd>

                            <dt class="col-sm-5">
                                Pseudo
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Pseudo)
                            </dd>

                            <dt class="col-sm-5 font-weight-bold">Sexe</dt>
                            <dd class="col-sm-7">
                                @((Model.Sexe == "1") ? "Homme" : "Femme")
                            </dd>

                            <dt class="col-sm-5 font-weight-bold">Situation matrimoniale</dt>
                            <dd class="col-sm-7">
                                @((Model.SituationMatrimoniale == "1") ? "Marrié" : "Celibataire")
                            </dd>

                            <dt class="col-sm-5">
                                Nombres Enfant
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.NombreEnfant)
                            </dd>

                            <dt class="col-sm-5">
                                Date de naissance
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.DateDenaissance)
                            </dd>

                            <dt class="col-sm-5">
                                Lieux de Naissance
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.LieuxNaissance)
                            </dd>

                            <dt class="col-sm-5">
                                PaysNaissance
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.PaysNaissance)
                            </dd>

                            <dt class="col-sm-5">
                                Nationnalite
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Nationnalite)
                            </dd>

                            <dt class="col-sm-5">
                                Commune de naissance
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.CommuneDeNaissance)
                            </dd>

                            <dt class="col-sm-5">
                                Numero de telephone
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.NumeroDeTelephone)
                            </dd>

                            <dt class="col-sm-5">
                                Profession
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Profession)
                            </dd>

                            <dt class="col-sm-5">
                                Domicile
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Domicile)
                            </dd>

                            <dt class="col-sm-5">
                                Type De piece
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.TypeDepiece)
                            </dd>

                            <dt class="col-sm-5">
                                Numero de piece
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.NumeroDePiece)
                            </dd>

                            <dt class="col-sm-5">
                                Date edition
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.DateEdition)
                            </dd>

                        </dl>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.id">Modifier</a>
                        <a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
                        <a class="btn btn-success" href="/Filiations/Create?documentId=@Model?.id">Etape suivants</a>
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="img" style="margin-top: 9rem;">
                    <img src="~/img/logociv.png" class="float-right">
                </div>
            </div>



        </div>
    </div>
</div>
    <!-- Ajoutez ici les liens vers les fichiers JavaScript de Bootstrap -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->
    <script src="pluginsplugin/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    <script src="plugins/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="plugins/moment/moment.min.js"></script>
    <script src="plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="dist/js/adminlte.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="dist/js/demo.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="dist/js/pages/dashboard.js"></script>
</body>
</html>







