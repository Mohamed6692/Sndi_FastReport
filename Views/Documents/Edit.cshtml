                            <input asp-for="TypeDepiece" class="form-control" />
                            <span asp-validation-for="TypeDepiece" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 position-relative">
                            <label asp-for="NumeroDePiece" class="form-label">Numéro de Pièce</label>
                            <input asp-for="NumeroDePiece" class="form-control" />
                            <span asp-validation-for="NumeroDePiece" class="text-danger"></span>
                        </div>

