                            <span asp-validation-for="DateEdition" class="text-danger"></span>
                        </div>

                        <!-- Répétez cette structure pour les autres champs -->

                        <div class="col-12">
                            <div class="text-end">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </section>
